@model BookLibrary.ViewModel.BookFormViewModel
@{
    ViewBag.Title = "BookForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Books"))
{
    @Html.ValidationSummary(true,"Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Edition)
        @Html.TextBoxFor(m => m.Edition, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Edition)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ISBN)
        @Html.TextBoxFor(m => m.ISBN, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ISBN)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PublishDate)
        @Html.TextBoxFor(m => m.PublishDate, "{0:d MMM yyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PublishDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BookLanguageId)
        @Html.DropDownListFor(m => m.BookLanguageId, new SelectList(Model.BookLanguages, "Id", "Name"), "Select Book Language", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BookLanguageId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BookTypeId)
        @Html.DropDownListFor(m => m.BookTypeId, new SelectList(Model.BookTypes, "Id", "Name"), "Select Book Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BookTypeId)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}