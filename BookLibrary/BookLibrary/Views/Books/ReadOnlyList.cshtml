@model IEnumerable<BookLibrary.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

    <table id="books" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>              
                <th>Language</th>
                <th>Number In Stock</th>
                @*<th>Book Type</th>*@
            </tr>
        </thead>
        <tbody>           
        </tbody>
    </table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#books").DataTable(
            {
                ajax: {
                    url: "/api/books",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",                       
                    },
                    {
                        data: "bookLanguage.name"
                    },
                    {
                        data: "numberInStock"
                    }
                ]
            });

        });
    </script>
}
